---
interface NavBarItem {
  name: string;
  referencedSection: string;
}

interface Props {
  items: Array<NavBarItem>
}

const { items } = Astro.props;
---

<nav
  class="fixed top-0 w-full  z-50"
>
  <div class="container mx-auto w-1/2 px-6 py-4 rounded-full bg-zinc-900 bg-opacity-95 backdrop-blur-sm border-b border-zinc-800">
    <div class="flex justify-center items-center ">
      <div class="flex gap-8">
        {
          items.map((item) => (
            <a href={item.referencedSection} 
              class="text-gray-300 hover:text-orange-500 transition-colors"
            >
              { item.name }
            </a>
          ))
        }
      </div>
    </div>
  </div>
</nav>
